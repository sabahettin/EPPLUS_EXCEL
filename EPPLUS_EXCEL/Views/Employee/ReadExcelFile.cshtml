@model List<Employee>
@{
    ViewData["Title"] = "ReadExcelFile";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex">
            <div class="col-md-6">
                <h3>Employee List</h3>
            </div>
            <div class="col-md-3">
                <a asp-action="CreateExcelFile" class="btn btn-primary">Listeyi İndir</a>
            </div>
            <div class="col-md-3">
                <form method="post" enctype="multipart/form-data" asp-action="ReadExcelFile">
                    <div class="form-group">
                        <label for="file">Dosya Seçiniz:</label>
                        <input type="file" name="file" id="file" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Dosyayı Yükle</button>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-hover" border="1">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Email</th>
                </tr>

                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.SurName</td>
                        <td>@employee.Email</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No data available.</p>
        }
    </div>
</div>
